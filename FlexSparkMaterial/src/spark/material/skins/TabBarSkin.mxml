<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:components="spark.material.components.*">

    <fx:Metadata>
        [HostComponent("spark.components.TabBar")]
    </fx:Metadata>

    <s:states>
        <s:State name="disabled"/>
        <s:State name="normal"/>
    </s:states>

    <s:Rect width="100%" height="100%">
        <s:fill>
            <s:SolidColor color="{getStyle('backgroundColor')}"/>
        </s:fill>
    </s:Rect>

    <s:DataGroup id="dataGroup" width="100%" height="100%">
        <s:layout>
            <s:HorizontalLayout gap="-1"/>
        </s:layout>
        <s:itemRenderer>
            <fx:Component>
                <components:ButtonBarButton skinClass="spark.material.skins.TabBarButtonSkin" stickyHighlighting="true"/>
            </fx:Component>
        </s:itemRenderer>
    </s:DataGroup>

    <s:Line id="selectedTabLine" bottom="0">
        <s:stroke>
            <s:SolidColorStroke weight="2" color="{getStyle('selectedTabColor')}" caps="square"/>
        </s:stroke>
    </s:Line>

</s:Skin>
